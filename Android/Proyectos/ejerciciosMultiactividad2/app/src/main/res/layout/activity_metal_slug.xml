<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    android:backgroundTint="#000000"
    tools:context=".metalSlugA">

    <TextView
        android:id="@+id/jugador1"
        android:layout_width="142dp"
        android:layout_height="36dp"
        android:layout_marginTop="28dp"
        android:text="Jugador 1"
        android:textAlignment="center"
        android:textColor="#FF0000"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/jugador"
        app:layout_constraintHorizontal_bias="0.102"
        app:layout_constraintStart_toStartOf="@+id/jugador"
        app:layout_constraintTop_toBottomOf="@+id/jugador" />

    <TextView
        android:id="@+id/jugador"
        android:layout_width="366dp"
        android:layout_height="47dp"
        android:layout_marginTop="28dp"
        android:text="METAL SLUG SELECTOR"
        android:textAlignment="center"
        android:textColor="#FF0000"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="142dp"
        android:layout_height="36dp"
        android:layout_marginStart="52dp"
        android:text="Arma J1"
        android:textAlignment="center"
        android:textColor="#FF0000"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/jugador1"
        app:layout_constraintStart_toEndOf="@+id/jugador1"
        app:layout_constraintTop_toTopOf="@+id/jugador1"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/textView11"
        android:layout_width="142dp"
        android:layout_height="36dp"
        android:layout_marginStart="52dp"
        android:text="Arma J2"
        android:textAlignment="center"
        android:textColor="#FF0000"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/textView8"
        app:layout_constraintStart_toEndOf="@+id/textView8"
        app:layout_constraintTop_toTopOf="@+id/textView8"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="142dp"
        android:layout_height="36dp"
        android:layout_marginTop="84dp"
        android:text="Jugador 2"
        android:textAlignment="center"
        android:textColor="#FF0000"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/u3a7aidimgbtJugador1"
        app:layout_constraintStart_toStartOf="@+id/u3a7aidimgbtJugador1"
        app:layout_constraintTop_toBottomOf="@+id/u3a7aidimgbtJugador1" />

    <ImageButton
        android:id="@+id/u3a7aidimgbtArmaJugador1"
        android:layout_width="156dp"
        android:layout_height="156dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="4dp"
        android:scaleType="fitXY"
        app:layout_constraintStart_toEndOf="@+id/u3a7aidimgbtJugador1"
        app:layout_constraintTop_toBottomOf="@+id/textView10"
        app:srcCompat="@drawable/arma" />

    <ImageButton
        android:id="@+id/u3a7aidimgbtArmaJugador2"
        android:layout_width="156dp"
        android:layout_height="156dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="4dp"
        android:scaleType="fitXY"
        app:layout_constraintStart_toEndOf="@+id/u3a7aidimgbtJugador2"
        app:layout_constraintTop_toBottomOf="@+id/textView11"
        app:srcCompat="@drawable/arma" />

    <ImageButton
        android:id="@+id/u3a7aidimgbtJugador2"
        android:layout_width="156dp"
        android:layout_height="156dp"
        android:layout_marginTop="4dp"
        android:scaleType="fitXY"
        app:layout_constraintEnd_toEndOf="@+id/textView8"
        app:layout_constraintStart_toStartOf="@+id/textView8"
        app:layout_constraintTop_toBottomOf="@+id/textView8"
        app:srcCompat="@drawable/icono" />

    <ImageButton
        android:id="@+id/u3a7aidimgbtJugador1"
        android:layout_width="156dp"
        android:layout_height="156dp"
        android:layout_marginTop="4dp"
        android:scaleType="fitXY"
        app:layout_constraintEnd_toEndOf="@+id/jugador1"
        app:layout_constraintStart_toStartOf="@+id/jugador1"
        app:layout_constraintTop_toBottomOf="@+id/jugador1"
        app:srcCompat="@drawable/icono" />

    <Button
        android:id="@+id/u3a7aidbtLimpiar"
        android:layout_width="250dp"
        android:layout_height="58dp"
        android:layout_marginTop="64dp"
        android:backgroundTint="#FF0000"
        android:text="Limpiar"
        android:textColor="#000000"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/u3a7aidimgbtArmaJugador2"
        app:layout_constraintHorizontal_bias="0.509"
        app:layout_constraintStart_toStartOf="@+id/u3a7aidimgbtJugador2"
        app:layout_constraintTop_toBottomOf="@+id/u3a7aidimgbtJugador2" />

    <TextView
        android:id="@+id/u3a7aidtvNombreJ1"
        android:layout_width="116dp"
        android:layout_height="31dp"
        android:layout_marginTop="13dp"
        android:textAlignment="center"
        android:textColor="#FF0000"
        android:textColorHighlight="#FF0000"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/u3a7aidimgbtJugador1"
        app:layout_constraintStart_toStartOf="@+id/u3a7aidimgbtJugador1"
        app:layout_constraintTop_toBottomOf="@+id/u3a7aidimgbtJugador1" />

    <TextView
        android:id="@+id/u3a7aidtvNombreJ2"
        android:layout_width="116dp"
        android:layout_height="31dp"
        android:layout_marginTop="7dp"
        android:textAlignment="center"
        android:textColor="#FF0000"
        android:textColorHighlight="#FF0000"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/u3a7aidimgbtJugador2"
        app:layout_constraintStart_toStartOf="@+id/u3a7aidimgbtJugador2"
        app:layout_constraintTop_toBottomOf="@+id/u3a7aidimgbtJugador2" />

</androidx.constraintlayout.widget.ConstraintLayout>