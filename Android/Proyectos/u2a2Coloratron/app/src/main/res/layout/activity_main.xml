<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/u2a2tvr"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/u2a2etnombre"
        android:layout_width="379dp"
        android:layout_height="84dp"
        android:layout_marginTop="64dp"
        android:ems="10"
        android:hint="Introduce un texto"
        android:inputType="text"
        android:text="#"
        android:textColor="#00000000"
        android:textSize="48sp"
        app:layout_constraintBottom_toTopOf="@+id/u2a2tbcolor"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <SeekBar
        android:id="@+id/u2a2sbrojo"
        android:layout_width="208dp"
        android:layout_height="17dp"
        android:layout_marginTop="40dp"
        android:max="255"
        android:progress="0"
        android:thumbTint="#FF0000"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.492"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/u2a2etnombre" />

    <TextView
        android:id="@+id/u2a2tvrojo"
        android:layout_width="27dp"
        android:layout_height="50dp"
        android:text="R"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/u2a2sbrojo"
        app:layout_constraintHorizontal_bias="0.835"
        app:layout_constraintStart_toStartOf="parent"

        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.256" />

    <EditText
        android:id="@+id/u2a2etresultado"
        android:layout_width="300dp"
        android:layout_height="52dp"
        android:layout_marginBottom="112dp"
        android:ems="10"
        android:inputType="text"
        app:layout_constraintBottom_toTopOf="@+id/u2a2btpulsa"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.405"
        app:layout_constraintStart_toStartOf="parent" />

    <SeekBar
        android:id="@+id/u2a2sbgverde"
        android:layout_width="210dp"
        android:layout_height="20dp"
        app:layout_constraintBottom_toTopOf="@+id/u2a2sbazul"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/u2a2sbrojo" />

    <TextView
        android:id="@+id/u2a2tvverde"
        android:layout_width="26dp"
        android:layout_height="35dp"
        android:layout_marginTop="176dp"
        android:layout_marginEnd="264dp"
        android:text="G"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="@+id/u2a2btpulsa"
        app:layout_constraintEnd_toEndOf="@+id/u2a2etresultado"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/u2a2etnombre"
        app:layout_constraintVertical_bias="0.007" />

    <TextView
        android:id="@+id/u2a2tvazul"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="36dp"
        android:text="B"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="@+id/u2a2tbcolor"
        app:layout_constraintEnd_toEndOf="@+id/u2a2sbazul"
        app:layout_constraintHorizontal_bias="0.194"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/u2a2sbgverde"
        app:layout_constraintVertical_bias="0.033" />

    <SeekBar
        android:id="@+id/u2a2sbazul"
        android:layout_width="210dp"
        android:layout_height="22dp"
        android:layout_marginBottom="116dp"
        app:layout_constraintBottom_toTopOf="@+id/u2a2etresultado"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.437"
        app:layout_constraintStart_toStartOf="parent" />

    <ToggleButton
        android:id="@+id/u2a2tbcolor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="100dp"
        app:layout_constraintBottom_toBottomOf="@+id/u2a2etresultado"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.542"
        app:layout_constraintStart_toEndOf="@+id/u2a2tvcolortxt" />

    <TextView
        android:id="@+id/u2a2tvcolortxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="36dp"
        android:text="Color blanco/Color negro"
        app:layout_constraintEnd_toEndOf="@+id/u2a2etresultado"
        app:layout_constraintHorizontal_bias="0.006"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="356dp" />

    <Button
        android:id="@+id/u2a2btpulsa"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="80dp"
        android:text="Button"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/u2a2tvrojo"
        app:layout_constraintVertical_bias="1.0"
        tools:layout_editor_absoluteX="160dp" />

</androidx.constraintlayout.widget.ConstraintLayout>