<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/etChoco"
        android:layout_width="179dp"
        android:layout_height="41dp"
        android:layout_marginStart="44dp"
        android:layout_marginTop="116dp"
        android:ems="10"
        android:inputType="number"
        app:layout_constraintStart_toEndOf="@+id/tvVainilla"
        app:layout_constraintTop_toBottomOf="@+id/etVainilla" />

    <TextView
        android:id="@+id/tvVainilla"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="48dp"
        android:layout_marginTop="84dp"
        android:text="Vainilla"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/etVainilla"
        android:layout_width="179dp"
        android:layout_height="41dp"
        android:layout_marginStart="44dp"
        android:layout_marginTop="72dp"
        android:ems="10"
        android:inputType="number"
        app:layout_constraintStart_toEndOf="@+id/tvVainilla"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/etFresa"
        android:layout_width="179dp"
        android:layout_height="41dp"
        android:layout_marginStart="44dp"
        android:layout_marginTop="44dp"
        android:ems="10"
        android:inputType="number"
        app:layout_constraintStart_toEndOf="@+id/tvVainilla"
        app:layout_constraintTop_toBottomOf="@+id/tvVainilla" />

    <TextView
        android:id="@+id/tvFresa"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="48dp"
        android:layout_marginTop="52dp"
        android:text="Fresa"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvVainilla" />

    <TextView
        android:id="@+id/tvChoco"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="52dp"
        android:layout_marginEnd="20dp"
        android:text="Chocolate"
        android:textSize="24sp"
        app:layout_constraintEnd_toStartOf="@+id/etVainilla"
        app:layout_constraintTop_toBottomOf="@+id/tvFresa" />

    <Spinner
        android:id="@+id/spRecipiente"
        android:layout_width="306dp"
        android:layout_height="57dp"
        android:layout_marginStart="44dp"
        android:layout_marginTop="220dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvVainilla" />

    <Button
        android:id="@+id/btGenerar"
        android:layout_width="411dp"
        android:layout_height="63dp"
        android:layout_marginTop="504dp"
        android:text="Generar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvVainilla" />
</androidx.constraintlayout.widget.ConstraintLayout>