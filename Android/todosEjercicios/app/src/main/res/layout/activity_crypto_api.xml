<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ut07.CryptoApi">

    <Button
        android:id="@+id/btSeleccionaCrypto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Selecciona"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.216" />

    <Spinner
        android:id="@+id/spCrypto"
        android:layout_width="283dp"
        android:layout_height="68dp"
        android:contextClickable="false"
        android:entries="@array/Destino"
        android:textAlignment="center"
        app:layout_constraintBottom_toTopOf="@+id/btSeleccionaCrypto"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvInfoCrypto"
        android:layout_width="307dp"
        android:layout_height="431dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btSeleccionaCrypto" />

</androidx.constraintlayout.widget.ConstraintLayout>